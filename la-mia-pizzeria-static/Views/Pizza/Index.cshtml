@model List<Pizza>;


<div class="container">
    <h1 class="display-4 mb-4">Le nostre pizze</h1>
    
    @if(Model != null)
    {
        <ul class="row list-unstyled">
            @foreach (Pizza pizza in Model)
            {
                <li class="col-4">
                    <div class="card mb-2">
                        <h3 class="text-center">@pizza.Name</h3>
                        <div class="card-body">
                            <img src="@pizza.Image" width="100%" height="275" />
                            <div class="text-danger mb-1">@pizza.Price €</div>
                            <div class="mb-2">@pizza.Category</div>
                            <a href="@Url.Action("Details", "Pizza", new {id= pizza.Id})"><button class="p-1 rounded border-0 bg-dark text-white">Visualizza</button></a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
       <div>Lista non trovata.</div>
    }

</div>
